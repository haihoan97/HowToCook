<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#fff"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_share_post_user_ava"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/miku" />

            <TextView
                android:id="@+id/item_share_post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/item_share_post_follow"
                android:layout_toRightOf="@+id/item_share_post_user_ava"
                android:gravity="center_vertical"
                android:text="Miku"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_share_post_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_share_post_user_name"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/item_share_post_follow"
                android:layout_toRightOf="@+id/item_share_post_user_ava"
                android:gravity="center_vertical"
                android:text="đã đăng thực hiện 2 giờ trước"
                android:textSize="10sp" />
            
            <ToggleButton
                android:id="@+id/item_share_post_follow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/toggle_follow"
                android:text=""
                android:textOn=""
                android:textOff=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/item_share_post_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_share_post_user_name"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/item_share_post_follow"
            android:layout_toRightOf="@+id/item_share_post_user_ava"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="cong thuc tuyet voi sjfba aksjf kafk afj lnkan fka"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_share_post_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/beef" />


    </LinearLayout>


</android.support.v7.widget.CardView>