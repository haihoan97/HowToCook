<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_noti_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_noti_ava"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/miku" />

            <LinearLayout
                android:id="@+id/item_noti_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_noti_img_post"
                android:layout_toRightOf="@+id/item_noti_ava"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_noti_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Miku "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_noti_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="da dang bai viet moi" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_noti_post_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuong Thi Bof safasfasfaffasfsafsafasfsafasfasfasfasfasfasf"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_noti_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 thang 4 luc 12:00" />


            </LinearLayout>

            <ImageView
                android:id="@+id/item_noti_img_post"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/beef" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>