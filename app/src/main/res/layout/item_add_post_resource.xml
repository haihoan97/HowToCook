<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <EditText
        android:id="@+id/item_add_post_resource_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_comment_round"
        android:hint="tên nguyên liệu"
        android:maxLines="1"
        android:minHeight="30dp"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/item_add_post_resource_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_comment_round"
        android:hint="khối lượng"
        android:maxLines="1"
        android:minHeight="30dp"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/item_add_post_delete_resource"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_remove_circle_red_24dp" />


</LinearLayout>