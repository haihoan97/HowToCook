<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/item_small_post_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beef" />

                <ToggleButton
                    android:id="@+id/item_small_post_like_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:alpha="8"
                    android:background="@drawable/checkbox_change_bg2"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>


            <TextView
                android:id="@+id/item_small_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Thit bo nuong"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_small_post_user_ava"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/miku" />

                <TextView
                    android:id="@+id/item_small_post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/item_small_post_follow"
                    android:layout_toRightOf="@+id/item_small_post_user_ava"
                    android:gravity="center_vertical"
                    android:text="Miku"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ToggleButton
                    android:id="@+id/item_small_post_follow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/toggle_follow"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>


            <TextView
                android:id="@+id/item_small_post_count_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="10sp"
                android:text="5000 luot xem va 2000 luot thich" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>